@page
@model ReportsModel
@{
}

<style>
    .bg-success {
        background-color: #ccffcc !important;
    }

    .bg-warning {
        background-color: #ffffcc !important;
    }

    .bg-danger {
        background-color: #ffcccc !important;
    }
</style>

<form method="get" class="mb-3">
    <div class="row">
        <div class="col-md-3">
            <label for="ObjectId" class="form-label">Выбор объекта</label>
            <select id="ObjectId" name="ObjectId" class="form-select">
                <option value="">Все объекты</option>
                @foreach (var site in Model.ConstructionSites)
                {
                    <option value="@site.ObjectId" selected="@(Model.SelectedObjectId == site.ObjectId ? "selected" : null)">
                        @site.ObjectName
                    </option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <label for="UserId" class="form-label">Исполнитель</label>
            <input type="text" id="UserId" name="UserId" class="form-control" value="@Model.SelectedUserId" />
        </div>
        <div class="col-md-3">
            <label for="DateFrom" class="form-label">Дата с</label>
            <input type="date" id="DateFrom" name="DateFrom" class="form-control" value="@Model.DateFrom" />
        </div>
        <div class="col-md-3">
            <label for="DateTo" class="form-label">Дата по</label>
            <input type="date" id="DateTo" name="DateTo" class="form-control" value="@Model.DateTo" />
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
            <label class="form-label">Статусы</label><br />
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="Approved" name="Statuses" value="Approved" />
                <label class="form-check-label" for="Approved">Утвержден</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="InCheck" name="Statuses" value="InCheck" />
                <label class="form-check-label" for="InCheck">Проверка</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="ToCorrect" name="Statuses" value="ToCorrect" />
                <label class="form-check-label" for="InCheck">Доработать</label>
            </div>
        </div>
    </div>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createReportModal">
        Создать новый отчёт
    </button>
    <div class="row mt-3">
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary">Применить</button>
        </div>
    </div>
</form>

<table id="reportsTable" class="table table-striped">
    <thead>
        <tr>
            <th>Номер документа</th>
            <th>Объект</th>
            <th>Подразделение</th>
            <th>Дата</th>
            <th>Исполнитель</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model.Reports)
        {
            var status = report.ReportStateJournals
            .OrderByDescending(j => j.StateDate)
            .FirstOrDefault()?.State?.StateName ?? "Нет данных";

            var rowClass = status switch
            {
                "Утвержден" => "bg-success text-white",
                "Проверка" => "bg-warning",
                "Доработать" => "bg-danger text-white",
                _ => ""
            };

            <tr class="@rowClass">
                <td>@report.НомерДокумента</td>
                <td>@report.Object?.ObjectName</td>
                <td>@report.DepartmentId</td>
                <td>@report.Data.ToShortDateString()</td>
                <td>@($"{report.User?.User?.LastName} {report.User?.User?.FirstName} {report.User?.User?.MiddleName}")</td>
                <td>@status</td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="actionDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            Действия
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="actionDropdown">
                            <li><a class="dropdown-item" asp-page="/Reports/Edit" asp-route-id="@report.ReportId">Редактировать</a></li>
                            @if (!(report.ReportStateJournals
                           .OrderByDescending(j => j.StateDate)
                           .FirstOrDefault()?.State?.StateName == "Проверка"))
                            {
                                <li>
                                    <form method="post" asp-page-handler="SubmitForApproval" style="display: inline;">
                                        <input type="hidden" name="ReportId" value="@report.ReportId" />
                                        <button type="submit" class="dropdown-item">Отправить на утверждение</button>
                                    </form>
                                </li>
                            }
                            <li>
                                <form method="post" asp-page-handler="Delete" style="display: inline;">
                                    <input type="hidden" name="ReportId" value="@report.ReportId" />
                                    <button type="submit" class="dropdown-item text-danger">Удалить</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="createReportModal" tabindex="-1" aria-labelledby="createReportModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createReportModalLabel">Создать новый отчёт</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="createReportForm" method="post" asp-page-handler="Create">
                    <div class="mb-3">
                        <label for="reportDate" class="form-label">Дата</label>
                        <input type="date" class="form-control" id="reportDate" name="Date" required>
                    </div>
                    <div class="mb-3">
                        <label for="reportNumber" class="form-label">Номер документа</label>
                        <input type="text" class="form-control" id="reportNumber" name="DocumentNumber" required>
                        @if (ViewData["ErrorMessage"] != null)
                        {
                            <div class="text-danger">@ViewData["ErrorMessage"]</div>
                        }
                    </div>
                    <div class="mb-3">
                        <label for="reportNotes" class="form-label">Примечание</label>
                        <textarea class="form-control" id="reportNotes" name="Notes" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-success">Создать</button>
                </form>
            </div>
        </div>
    </div>
</div>

@if (ViewData["ErrorMessage"] != null)
{
    <script>
        var modalElement = document.getElementById('createReportModal');
        var modal = new bootstrap.Modal(modalElement);
        modal.show();
    </script>
}