@page
@model LoginModel
@{
    ViewData["Title"] = "Авторизация";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 24rem;">
        <div class="card-body">
            <h5 class="card-title text-center">Войти</h5>
            <form method="post">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" class="form-control" asp-for="Email" required />
                </div>
                <div class="form-group">
                    <label for="password">Пароль</label>
                    <input type="password" id="password" class="form-control" asp-for="Password" required />
                </div>
                <div class="form-check">
                    <input type="checkbox" id="rememberMe" class="form-check-input" asp-for="RememberMe" />
                    <label class="form-check-label" for="rememberMe">Запомнить меня</label>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Войти</button>
                </div>
                <div class="text-danger">
                    @Model.ErrorMessage
                </div>
            </form>
        </div>
    </div>
</div>